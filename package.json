{
  "name": "syncmyplays",
  "version": "1.0.0",
  "description": "SyncMyPlays - Music Playlist Sync Tool",
  "author": "SyncMyPlays Team",
  "main": "electron/main.js",
  "scripts": {
    "postinstall": "node scripts/postinstall.js",
    "start": "node scripts/start-with-web.js",
    "start:desktop": "electron .",
    "start:web": "cd web && npm run dev",
    "start:both": "echo Starting Desktop App... && start cmd /k npm start && timeout /t 3 && echo Starting Web Version... && cd web && npm run dev",
    "build": "webpack --config webpack.config.js --mode production",
    "build:backend": "echo Backend will run directly from backend/ - no compilation needed",
    "build:web": "cd web && npm run build",
    "dev": "webpack serve --config webpack.config.js --mode development",
    "pre-install-deps": "node scripts/pre-install-dependencies.js",
    "bundle-deps": "node scripts/bundle-dependencies.js",
    "ensure-deps": "node scripts/ensure-dependencies.js",
    "dist": "npm run build && electron-builder --win",
    "dist:secure": "node scripts/build-secure.js",
    "postpack": "node scripts/hash-asar.js",
    "verify:security": "node scripts/verify-security.js",
    "suppress:warnings": "node scripts/suppress-warnings.js",
    "optimize:build": "node scripts/optimize-build.js",
    "install-deps": "node scripts/install-dependencies.js",
    "check-deps": "node check-dependencies.js",
    "setup": "npm run install-deps && npm run check-deps",
    "setup-apple-token": "node scripts/setup-apple-music-token.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testMatch=\"**/*.integration.test.js\"",
    "lint": "eslint backend/",
    "docs:api": "node -e \"console.log('API docs available at http://localhost:3001/api-docs when server is running')\"",
    "update:deps": "npm update --legacy-peer-deps && npm audit fix --force",
    "update:deps:major": "npm update --save --legacy-peer-deps && npm audit fix --force",
    "check:deps": "npm outdated",
    "audit:fix": "npm audit fix --force",
    "audit:check": "npm audit --audit-level=moderate",
    "deps:check": "node scripts/dependency-manager.js check",
    "deps:update": "node scripts/dependency-manager.js update",
    "deps:report": "node scripts/dependency-manager.js report",
    "major:all": "node scripts/major-updates-executor.js all",
    "major:phase1": "node scripts/major-updates-executor.js phase1",
    "major:phase2": "node scripts/major-updates-executor.js phase2",
    "major:phase3": "node scripts/major-updates-executor.js phase3"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "dotenv-expand": "^12.0.2",
    "electron-store": "^8.2.0",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "framer-motion": "^12.23.24",
    "fs-extra": "^11.3.2",
    "fuse.js": "^7.0.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.8.1",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "node-forge": "^1.3.1",
    "p-limit": "^7.1.1",
    "pem-jwk": "^2.0.0",
    "pm2": "^6.0.8",
    "querystring": "^0.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0",
    "socket.io": "^4.8.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.11.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "babel-loader": "^10.0.0",
    "copy-webpack-plugin": "^13.0.0",
    "css-loader": "^7.1.2",
    "electron": "^38.3.0",
    "electron-builder": "^26.0.12",
    "eslint": "^8.55.0",
    "html-webpack-plugin": "^5.6.3",
    "javascript-obfuscator": "^4.1.1",
    "jest": "^30.2.0",
    "nodemon": "^3.0.2",
    "pkg": "^5.8.1",
    "style-loader": "^4.0.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "typescript": "^5.8.3",
    "webpack": "^5.100.2",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2",
    "webpack-obfuscator": "^3.5.1"
  },
  "build": {
    "appId": "com.syncmyplays.app",
    "productName": "SyncMyPlays",
    "compression": "normal",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "backend/**/*",
      "!backend/node_modules/**/*",
      "node_modules/**/*",
      "!node_modules/fsevents/**/*",
      "package.json",
      "!**/*.map",
      "!**/test/**",
      "!**/tests/**",
      "!**/__tests__/**",
      "!**/.git/**",
      "!**/.vscode/**"
    ],
    "asar": true,
    "asarUnpack": [
      "node_modules/**/*",
      "backend/**/*"
    ],
    "nodeGypRebuild": false,
    "buildDependenciesFromSource": false,
    "npmRebuild": false,
    "removePackageScripts": true,
    "publish": null,
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "artifactName": "SyncMyPlays-Setup-${version}.${ext}",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "runAfterFinish": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "license": null,
      "perMachine": false
    }
  }
}
