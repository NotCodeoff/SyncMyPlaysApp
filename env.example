# SyncMyPlays Environment Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control

# Application Configuration
NODE_ENV=production
APP_VERSION=1.0.0

# Update URLs
UPDATE_VERSION_URL=https://your-domain.com/version_status.txt
UPDATE_DOWNLOAD_URL=https://your-domain.com/syncmyplays.exe
KILL_SWITCH_URL=https://your-domain.com/kill_switch.txt
VERSION_URL=https://your-domain.com/version_status.txt

# Apple Music (Server signing for MusicKit developer token)
# These are used by the backend only; do NOT expose the private key to clients
APPLE_MUSIC_TEAM_ID=YOUR_TEAM_ID
APPLE_MUSIC_KEY_ID=YOUR_KEY_ID
APPLE_MUSIC_PRIVATE_KEY_BASE64=BASE64_ENCODED_PKCS8_P8_FILE

# Frontend (Vite) public config (safe to expose)
VITE_API_BASE_URL=https://YOUR-PROD-API.example.com
VITE_APP_NAME=SyncMyPlays
VITE_APPLE_MUSIC_TEAM_ID=YOUR_TEAM_ID
VITE_APPLE_MUSIC_KEY_ID=YOUR_KEY_ID
VITE_APPLE_SERVICES_ID=com.your.bundleid.web
ELECTRON_ENABLE_LOGGING=true

# Spotify Configuration
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
SPOTIFY_REDIRECT_URI=http://localhost:8000/auth/spotify/callback

# Backend Configuration
PORT=8080
ALLOW_ORIGINS=https://YOUR-WEB-DOMAIN.example,app://.
LOG_LEVEL=info

# Security Settings
ENABLE_KILL_SWITCH=true
ENABLE_UPDATE_CHECK=true
REQUIRE_ADMIN=true

# System Paths (optional - will use defaults if not set)
WINDIR=C:\\Windows
PROGRAMDATA=C:\\ProgramData
TEMP=C:\\Windows\\Temp
